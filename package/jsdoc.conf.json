{
  "source": {
    "include": ["./src"],             
    "includePattern": "\\.(js|jsx)$",   
    "exclude": [                       
      "node_modules/",
      "build/",
      "dist/",
      "coverage/",
      "tests/"
    ]
  },

  "opts": {
    "destination": "./docs",            
    "recurse": true,                    
    "encoding": "utf8",                 
    "verbose": true,                    
    "template": "./node_modules/docdash" 
  },

  "plugins": [
    "plugins/markdown"
  ],

  "templates": {
    "cleverLinks": true,              
    "monospaceLinks": false,            
    "default": {
      "outputSourceFiles": true         
    }
  }
}
